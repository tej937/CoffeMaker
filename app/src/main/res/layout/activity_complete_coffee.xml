<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompleteCoffee"
    android:background="@color/White">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:id="@+id/back"/>
        <TextView
            android:id="@+id/method_name"
            android:fontFamily="@font/josefinsansregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AeroPress"
            android:textSize="55sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:textColor="@color/Black"
            android:layout_gravity="center_horizontal"/>
            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="130dp"
                app:cardElevation="20dp"
                android:layout_gravity="center">
            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/circular_shape"
                android:max="1000"
                android:progress="1000"
                android:progressDrawable="@drawable/progress_bar"
                android:progressTint="@color/GreenColor"
                tools:targetApi="lollipop" />
                <ImageView
                    android:id="@+id/method_photo"
                    android:src="@drawable/aeropress"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    />
        </androidx.cardview.widget.CardView>
        <ImageView
            android:layout_marginTop="5dp"
            android:src="@drawable/done"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            />
<!--        <pl.droidsonroids.gif.GifImageView-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:id="@+id/completed"-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="150dp"-->
<!--            android:layout_gravity="center"-->
<!--           />-->
        <TextView
            android:fontFamily="@font/josefinsansregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="65sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/GreenColor"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:fontFamily="@font/josefinsansregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/take_photo"
            android:textSize="18sp"
            android:textAlignment="center"
            android:padding="10dp"
            android:textColor="@color/GreenColor"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/camera"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/photo"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tulumlogo" />
    </LinearLayout>
</ScrollView>