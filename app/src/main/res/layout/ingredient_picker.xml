<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/GreenColor"
    app:cardCornerRadius="50dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardBackgroundColor="@color/CreamColor"
            android:layout_centerInParent="true"
            android:layout_marginTop="70dp"
            app:cardCornerRadius="20dp"/>
        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_unit"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:np_dividerColor="@color/GreenColor"
            app:np_dividerType="underline"
            app:np_formatter="@string/number_picker_formatter"
            app:np_height="180dp"
            app:np_max="59"
            app:np_min="1"
            app:np_selectedTextColor="@color/GreenColor"
            app:np_selectedTextSize="30dp"
            app:np_textColor="@color/Black"
            app:np_textSize="25dp"
            app:np_typeface="@string/roboto_light"
            app:np_value="15"
            app:np_width="64dp" />
        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30sp"
            android:textColor="@color/White"
            android:layout_marginTop="90dp"
            android:layout_toEndOf="@id/number_unit"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/number_unit" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbutton"
            android:fontFamily="@font/josefinsansregular"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="25sp"
            android:layout_below="@id/number_unit"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>