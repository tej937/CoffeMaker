<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ingrediant_Selection"
    android:background="@color/White">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:id="@+id/back"/>
        <TextView
            android:id="@+id/method_name"
            android:fontFamily="@font/josefinsansregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aeropress"
            android:textSize="35sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:textColor="@color/Black"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/coffee_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/aeropress"
            />
        <TextView
            android:id="@+id/grind_size"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/josefinsansregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grind Size: Medium"
            android:textSize="35sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:textColor="@color/Black"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:fontFamily="@font/josefinsansregular"
                    android:id="@+id/coffee_dose"
                    android:text="15 gms"
                    android:textAllCaps="false"
                    android:textColor="@color/GreenColor"
                    android:textSize="20sp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/roundbutton"
                    />
                <TextView
                    android:fontFamily="@font/josefinsansregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coffee dose"
                    android:textSize="20sp"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"  />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:fontFamily="@font/josefinsansregular"
                    android:id="@+id/ratio"
                    android:text="1:10"
                    android:textSize="20sp"
                    android:textColor="@color/GreenColor"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/roundbutton"
                    />
                <TextView
                    android:fontFamily="@font/josefinsansregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ratio"
                    android:textSize="20sp"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:fontFamily="@font/josefinsansregular"
                    android:id="@+id/water_amt"
                    android:textAllCaps="false"
                    android:text="200ml"
                    android:textColor="@color/GreenColor"
                    android:textSize="20sp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/roundbutton"
                    />
                <TextView
                    android:fontFamily="@font/josefinsansregular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water amt."
                    android:textSize="20sp"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/start"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/roundbutton"
            android:layout_gravity="center_horizontal">
        <ImageView
            android:src="@drawable/back"
            android:rotation="180"
            android:layout_centerInParent="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />
        </RelativeLayout>

